<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_light"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.example.user.pum_lab2.MainActivity">

    <TextView
        android:id="@+id/miasto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Zabrze"
        android:textSize="20dp"
        android:layout_margin="3dp"
        android:textColor="@android:color/white"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_wb_sunny_black_24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="30 stopni Celsjusza"
        android:layout_margin="3dp"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/dodatkowe_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Pamiętaj o filtrze"
        android:layout_margin="3dp"
        android:textColor="@android:color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Podaj miejsce: "
        android:layout_margin="3dp"
        android:textColor="@android:color/white"/>

    <EditText
        android:id="@+id/podanemiejsce"
        android:layout_width="match_parent"
        android:padding="5dp"
        android:textAlignment="center"
        android:textColorLink="@android:color/black"
        android:layout_margin="3dp"
        android:layout_height="50dp"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/zmien_miejsce_btn"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@android:color/white"
        android:padding="20dp"
        android:text="ZMIEŃ MIEJSCE"
        android:textColor="@android:color/holo_blue_light" />

    <Button
        android:id="@+id/lista_miejsc_btn"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:background="@android:color/white"
        android:text="POKAŻ LISTĘ DOSTĘPNYCH MIEJSC"
        android:textColor="@android:color/holo_blue_light"/>



</LinearLayout>


